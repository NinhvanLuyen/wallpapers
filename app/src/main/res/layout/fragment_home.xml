<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGoCategory"
            app:layout_constraintTop_toBottomOf="@id/labeled"
            app:layout_constraintLeft_toLeftOf="@id/labeled"
            app:layout_constraintRight_toRightOf="@id/labeled"
            android:layout_margin="@dimen/margin_medium"
            android:layout_width="wrap_content"
            android:text="@string/title_category"
            android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGoDetail"
            app:layout_constraintTop_toBottomOf="@id/btnGoCategory"
            app:layout_constraintLeft_toLeftOf="@id/btnGoCategory"
            app:layout_constraintRight_toRightOf="@id/btnGoCategory"
            android:layout_margin="@dimen/margin_medium"
            android:layout_width="wrap_content"
            android:text="@string/title_detail"
            android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:id="@+id/labeled"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              android:text="home"
              app:layout_constraintRight_toRightOf="parent"
              android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>